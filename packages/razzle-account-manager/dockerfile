FROM node:20 as build_stage


# Set the working directory
WORKDIR /build

# Copy in the project files
COPY . .

# Install the dependencies
RUN npm install --legacy-peer-deps --force
RUN npx nx run razzle-account-manager:build --configuration=production --verbose

# Copy the build files to the production image
FROM node:20-alpine AS run_stage

WORKDIR /app
COPY --from=build_stage /build/dist/packages/razzle-account-manager/* /app
COPY --from=build_stage /build/node_modules /app/node_modules

RUN pwd
RUN ls -la

ENV RAZZLE_APP_ID=
ENV RAZZLE_API_KEY=
ENV RAZZLE_WS_URL=
ENV RAZZLE_API_BASE_URL=
ENV PORT=3011

# Expose the port
EXPOSE 3011

# RUN npm install --legacy-peer-deps

# Start the server
CMD node ./main.js