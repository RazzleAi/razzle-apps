{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "importHelpers": false,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
